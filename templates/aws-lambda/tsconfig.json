{
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "actions",
    "configs",
    "models",
    "utils"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ]
}